---
import Content from "../components/Content.astro";
import Banner from "../components/Banner.astro";
import Layout from "../layouts/Layout.astro";
import { Content as Intro } from "./about_author/intro.md";
const title = "Matdexir's page";
const description = "A page with a basic introduction to matdexir";
import "./about_author/_temp.css";
---

<Layout title={title} description={description}>
  <Banner />
  <Content class="mt-2">
    <article
			class="prose dark:prose-invert prose-headings:text-emerald-800 dark:prose-headings:text-emerald-600 prose-a:text-emerald-800 dark:prose-a:text-emerald-600 prose-a:no-underline"
    >
      <Intro />
    </article>
  </Content>
</Layout>
